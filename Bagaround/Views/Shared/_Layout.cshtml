<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bag Around</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/summernote")
    @Styles.Render("~/Content/datpick")
    @Styles.Render("~/Content/pgwslider")
    @Styles.Render("~/Content/AlertCs")

    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/summernote")
    @Scripts.Render("~/bundles/datepice")
    @Scripts.Render("~/bundles/pgwsliderjs")
    @Scripts.Render("~/bundle/AlertJs")

    @RenderSection("scripts", required: false)
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/gif" sizes="16x16">
</head>
<body>

    <div class="container">
        <div class="row">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                @if (Bagaround.Models.SessionMenager.UserId != null)
                {
                    if (Bagaround.Models.SessionMenager.Role == "Admin")
                    {
                        <div class="col-xs-1.5">
                            <a class="navbar-brand" href="@Url.Action("Order","Cart")" style="color:gray;font-size:small;font-weight:bold;">
                                <i class="fa fa-inbox" aria-hidden="true"></i> Order
                            </a>
                        </div>
                        <div class="col-xs-2">
                            <a class="navbar-brand" href="@Url.Action("AddNewProduct","BagShop")" style="color:grey;font-size:small;font-weight:bold;">
                                <i class="fa fa-plus" aria-hidden="true"></i> Add New Product
                            </a>
                        </div>
                        var Name = Bagaround.Models.SessionMenager.Name;
                        string shortName = Name.Substring(0, 5);
                        <div class="col-xs-7"></div>
                        <div class="col-xs-1 ">
                            @Html.ActionLink("Hello:" + shortName, "../BagShop/UserInfo", "", new { @class = "navbar-brand", @style = "color:white;font-size:small;font-weight:bold;padding-left:0;padding-right:0;" })
                        </div>
                        <div class="col-xs-1.5">
                            <a class="navbar-brand" href=@Url.Action("Logout","Login") style="font-size:small"><i class="fa fa-sign-out"></i> Log out</a>
                        </div>
                    }
                    else
                    {
                        var product = Session["ItemInCart"];
                        var Name = Bagaround.Models.SessionMenager.Name;
                        string shortName = Name.Substring(0, 3);
                        <div class="col-xs-9"></div>
                        <div class="col-xs-push-2 ">
                            @Html.ActionLink("Hello:" + shortName, "../BagShop/UserInfo", "", new { @class = "navbar-brand", @style = "color:white;font-size:small;padding-left:0;padding-right:0;" })
                        </div>
                            <div class="col-xs-2" style="margin-left:0;">

                                <a class="navbar-brand" href=@Url.Action("Logout","Login") style="font-size:small"><i class="fa fa-sign-out"></i> Log out</a>

                                <a class="navbar-brand" style="color:gray">|</a>

                                @if (product == null)
                                {
                                    <div class="col-xs-1">
                                        <a class="navbar-brand" href="@Url.Action("Index","Cart")">
                                            <span class="fa fa-stack-1x">
                                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    if (int.Parse(product.ToString()) != 0)
                                    {
                                        <div class="col-xs-1">
                                            <a class="navbar-brand" href="@Url.Action("Index","Cart")">
                                                <span class="fa fa-stack-1x">
                                                    <i class="fa fa-shopping-cart fa-stack-1x" aria-hidden="true" style="color:red;"></i>
                                                </span>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-xs-1">
                                            <a class="navbar-brand" href="@Url.Action("Index","Cart")">
                                                <span class="fa fa-stack-1x">
                                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                                </span>
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                    }

                }
                else
                {
                    <div class="col-xs-10"></div>
                    <div class="col-xs-2">
                        <a class="navbar-brand" href="@Url.Action("Login","Login")" style="font-size:small"><i class="fa fa-sign-in"></i> Log in</a>
                        <a class="navbar-brand" style="color:gray">|</a>
                        <a class="navbar-brand" href="@Url.Action("Index","Cart")"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                    </div>
                }
            </nav>
        </div>
        @RenderBody()
        <hr />
        <img src="https://s3-ap-southeast-1.amazonaws.com/bemynt/images/black_ribbon.png" style="position: fixed; z-index: 9999; width: 70px; bottom: 0; left: 0;">
        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <center>
                            <img src="http://oi60.tinypic.com/w8lycl.jpg" class="img-circle" alt="the-brains">
                            <br>
                            <h4 class="footertext">Programmer</h4>
                            <p class="footertext">You can thank all the crazy programming here to this guy.<br>
                        </center>
                    </div>
                    <div class="col-md-4">
                        <center>
                            <img src="http://oi60.tinypic.com/2z7enpc.jpg" class="img-circle" alt="...">
                            <br>
                            <h4 class="footertext">Artist</h4>
                            <p class="footertext">All the images here are hand drawn by this man.<br>
                        </center>
                    </div>
                    <div class="col-md-4">
                        <center>
                            <img src="http://oi61.tinypic.com/307n6ux.jpg" class="img-circle" alt="...">
                            <br>
                            <h4 class="footertext">Designer</h4>
                            <p class="footertext">This pretty site and the copy it holds are all thanks to this guy.<br>
                        </center>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="text-center center-block">
                    <br />
                    <a href="https://www.facebook.com"><i id="social-fb" class="fa fa-facebook-square fa-3x social"></i></a>
                    <a href="https://twitter.com"><i id="social-tw" class="fa fa-twitter-square fa-3x social"></i></a>
                    <a href="https://plus.google.com"><i id="social-gp" class="fa fa-google-plus-square fa-3x social"></i></a>
                </div>
                <hr>
            </div>
        </div>
    </div>
</body>
</html>