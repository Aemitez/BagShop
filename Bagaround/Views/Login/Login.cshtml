@model Bagaround.Models.UserListModel
@{
    ViewBag.Title = "Login";
}
<div class="row"style="padding-top:5em;">
    <div class="col-md-3 col-md-offset-1">
        <a href="../BagShop/Home"><i class="fa fa-home fa-4x" aria-hidden="true"></i></a>
    </div>
</div>
<div id="login-overlay" class="modal-dialog" style="padding-top:3em;">
    <div class="modal-content">
        <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Login to Bag Around</h4>
        </div>
        <div class="modal-body">
            @if (TempData["Message"] != null)
            {
                <span style="color:red;">@TempData["Message"].ToString()</span>
            }
            <div class="row">
                @using (Html.BeginForm("CheckLogin", "Login", FormMethod.Post))
                {
                    <div class="col-md-6 col-xs-6">
                        <div class="well">
                            <form id="loginForm" method="POST" action="/login/" novalidate="novalidate">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.LoginModel.LoginUserName, new { @Class = "control-label" })
                                    @Html.ValidationMessageFor(x => x.LoginModel.LoginUserName)
                                    @Html.TextBoxFor(x => x.LoginModel.LoginUserName, new { @Class = "form-control", type = "text", id = "username", name = "username", value = "", required = "", placeholder = "Username" })
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.LoginModel.LoginPassWord, new { @Class = "control-label" })
                                    @Html.ValidationMessageFor(x => x.LoginModel.LoginPassWord)
                                    @Html.TextBoxFor(x => x.LoginModel.LoginPassWord, new { @Class = "form-control", type = "password", id = "password", name = "password", value = "", required = "", placeholder = "Password" })
                                    <span class="help-block"></span>
                                </div>
                                <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(x => x.LoginModel.RememberMe) Remember me
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-block"><i class="fa fa-sign-in"></i> Login</button>
                            </form>
                        </div>
                    </div>
                }
                @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                {
                    <div class="col-md-6 col-xs-6">
                        <p class="lead">Register <span class="text-success">now</span></p>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="fa fa-check text-success"></span> See all your orders</li>
                            <li><span class="fa fa-check text-success"></span> can buy many things</li>
                        </ul>
                        <button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal"><i class="fa fa-pencil-square-o"></i> Register now!</button>
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Register Form</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.Username)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.Username)
                                            @Html.TextBoxFor(x => x.RegisterModel.Username, new { @Class = "form-control", placeholder = "Username" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.Password)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.Password)
                                            @Html.PasswordFor(x => x.RegisterModel.Password, new { @Class = "form-control", placeholder = "Password" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.ConfirmPassword)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.ConfirmPassword)
                                            @Html.PasswordFor(x => x.RegisterModel.ConfirmPassword, new { @Class = "form-control", placeholder = "Password" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.Name)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.Name)
                                            @Html.TextBoxFor(x => x.RegisterModel.Name, new { @Class = "form-control", placeholder = "Name" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.LastName)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.LastName)
                                            @Html.TextBoxFor(x => x.RegisterModel.LastName, new { @Class = "form-control", placeholder = "LastName" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.CreditCard)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.CreditCard)
                                            @Html.TextBoxFor(x => x.RegisterModel.CreditCard, new { @Class = "form-control", placeholder = "CreditCard" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.Email)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.Email)
                                            @Html.TextBoxFor(x => x.RegisterModel.Email, new { @Class = "form-control", placeholder = "Email" })
                                        </div>
                                        <div class="col-md-12">
                                            @Html.LabelFor(x => x.RegisterModel.Address)
                                            @Html.ValidationMessageFor(x => x.RegisterModel.Address)
                                            @Html.TextBoxFor(x => x.RegisterModel.Address, new { @Class = "form-control", placeholder = "Address" })
                                        </div>
                                    </div>
                                    <div class="modal-footer">

                                        <button class="btn btn-success">
                                            <i class="fa fa-pencil-square-o"></i> Register now
                                        </button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>