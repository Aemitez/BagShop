@model List<Bagaround.Models.PhotoList>

@using X.PagedList.Mvc;
@using X.PagedList;

@if (Model.Count == 0)
{
    <div class="text-center">
        <h1 style="color:gray;">Didn't Have Any Product That You're Looking For</h1>
        <img src="@Url.Content($"~/Content/images/no-product.png")">
    </div>
}
else
{
    foreach (var item in ViewBag.ProductsInOnePage)
    {
        <center>
            <div class="col-xs-3" id="imageBorder">
                <a  href=@Url.Action("ProductInfo", "BagShop", new { bagId = @item.ProductBagId })>
                    <img class="img-thumbnail" src="@Url.Content($"~/Photo/{@item.PictureName}")">
                    <p class="nameproduct">@item.ProductBagName</p>
                </a>
            </div>
        </center>
    }

    <div class="clearfix"></div>
    <center>
        @Html.PagedListPager((IPagedList)ViewBag.ProductsInOnePage, page => Url.Action( "../"+ViewBag.FOlder+"/"+ViewBag.Title , new { page }))
    </center>
    

}